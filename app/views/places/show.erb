<h3 style="text-align:center; background-color:darkgrey; color:lightgrey; padding:5px"><%= @place[:title] %></h3>
<h5>
  <%= number_to_currency(@place[:admission_price] / 100.0, precision: 2) %>
  <%= link_to "Edit", "/places/#{@place.id}/edit"%>
</h5>
<div class="row">
  <div>
    <%= image_tag @place[:photo_url], height: '300', width: '550'%>
  </div>
  <br/>
  <div>
    <p>
      <%= @place[:description]%>
    </p>
  </div>
</div>